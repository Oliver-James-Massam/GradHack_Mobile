<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <TextView
        android:id="@+id/orderNumberO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order #1"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/storeNameO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Store Name: store"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/ngoNameO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NGO Name: RedCross"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/productNameO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Name: Apples"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/productQuantityO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantity: 400"
        android:textSize="24sp"/>

    <ImageView
        android:id="@+id/qrCodeO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center"
        />

</LinearLayout>