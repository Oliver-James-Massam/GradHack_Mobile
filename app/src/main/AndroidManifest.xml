<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="za.ac.uj.eve.gradhack_mobile">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ProductDetailsActivity"
            android:label=" Product Details"></activity>
        <activity android:name=".RequestFoodActivity_NGO"
            android:label=" Request Food">
        </activity>
        <activity android:name=".ListProductsActivity_Stores"
            android:label=" List of Products"></activity>
        <activity android:name=".ViewOrdersActivity"
            android:label=" Order Details">
        </activity>
        <activity android:name=".DonationLeaderboardActivity"
            android:label=" Leaderboard">
        </activity>
        <activity android:name=".AddProduct" />
        <activity
            android:name=".zbraScan"
            android:label=" QRcode Generator"></activity>
        <activity
            android:name=".ScannerQr"
            android:label=" Scanner Generator"></activity>
        <activity android:name=".OrderListActivity"
            android:label=" List of Orders">
        </activity>
    </application>

</manifest>